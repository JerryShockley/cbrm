extends ../layout.pug

block links
  link(rel='stylesheet' href='/stylesheets/style.css')
  link(rel='stylesheet' href='/stylesheets/search.css')

block content
  header.center
    h1= title
  main
    form(action="/admin/search/project/create" method="post")
      .input-pair
        label(for='projectId') Project ID:
        input.input#search-project-id-button(type='text' name='projectId'
        placeholder='Enter project ID #')
      .flex.buttons.top-margin
        button.button.red(type="button" onclick=`adminUrl()`) Admin
        input.button.green(value='Search', type='submit')

  script.
    function adminUrl() {
      window.location.assign(`${window.location.origin}/admin`)
    }
