extends ../layout.pug

block links
  link(rel='stylesheet' href='/stylesheets/mapping.css')
  link(rel='stylesheet' href='/stylesheets/style.css')

block content
  .container
    header
      h1= title
      p#page-prompt= myprompt
    main.main
      include includes/mapping_svg.pug
    .brands
      #timer
        p#duration-text 00:00
        button#pause-button.button.red Pause Timer
      include includes/mapping_brandnames.pug
      ol#brand-list
    #buttons
      button.button.green#submit Submit
  #brand-modal.modal-dialog
    .modal-content
      .input-pair
        label(for='brand-name') Brand Name:
        input.input#brand-name-input(type='text' name='brand-name' placeholder='The name of the Brand you are mapping.')
      .input-pair
        label(for='brand-notes') Notes:
        textarea.input#brand-notes(name='brand-notes' rows='4' placeholder='Additional thoughts on this mapping.')
      .flex
        button.flex-inline.button.red.cancel Cancel
        button.flex-inline.button.green.save Save
  #paused-modal.modal-dialog
    .modal-content
      .center
        h1= title
      p#page-prompt= myprompt
      p#timer-msg.
        You may take as long as you like to complete the next portion of this
        survey. We are using a timer to track how long you take to complete the
        survey and ask that
        should you need to pause or step away before completing the next section
        that you press the Pause Timer Button underneath the clock on the right
        side of your sceen. When you're ready to continue, just press the Start
        Timer button at the bottom the the dialog box on your screen.
      .center
        button#start-button.button.green.center Start Timer

  script(src="/javascripts/mapping_new.js")
  script(src="https://unpkg.com/axios/dist/axios.min.js")
