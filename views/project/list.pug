extends ./../list_layout.pug

block content
  header.center
    h1= title
  main.main.top-margin
    table#project-table.display(style=`width:100%`)
      thead
        tr
          th Project ID
          th Name
          th Created
          th Updated
          th Respondent Count
      tfoot
        tr
          th Project ID
          th Name
          th Created
          th Updated
          th Respondent Count


    .flex.top-margin
      button.button.red(type=`button` onclick=`adminUrl()`) Close

  include ../includes/scripts.pug
  script(src=`/javascripts/project_list.js`)

  script.
    function adminUrl() {
      window.location.assign(`${window.location.origin}/admin/3355`)
    }
